@model ZEMS.Web.Pages.Employee.IndexModel
@using ZEMS.Web.Pages.Employee

@Html.CelerSoftPromptMessageContainer(EmployeeHtmlElementVariables.EmployeeListingsPromptContainer)
<table class="table small table-striped table-hover">
    <thead>
        <tr>
            @Html.CelerSoftTableHeaderSorter(model => Model.EmployeeList[0].FirstName)
            @Html.CelerSoftTableHeaderSorter(model => Model.EmployeeList[0].MiddleName)
            @Html.CelerSoftTableHeaderSorter(model => Model.EmployeeList[0].LastName)
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.EmployeeList != null)
        {
            foreach (var item in Model.EmployeeList)
            {
                <tr style="cursor:pointer;">
                    <td onclick="@(EmployeeHtmlElementVariables.ShowEditHandler.JSFunctionTriggerHandler)(@item.Id)">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td onclick="@(EmployeeHtmlElementVariables.ShowEditHandler.JSFunctionTriggerHandler)(@item.Id)">
                        @Html.DisplayFor(modelItem => item.MiddleName)
                    </td>
                    <td onclick="@(EmployeeHtmlElementVariables.ShowEditHandler.JSFunctionTriggerHandler)(@item.Id)">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    
                    <td>
                        <ul class="list-toolbar" style="float:right;">
                            <li onclick="@(EmployeeHtmlElementVariables.ShowEditHandler.JSFunctionTriggerHandler)(@item.Id)" class="list-toolbar-button">
                                <a data-toggle="tooltip" data-placement="top" title="@Resource.LabelEdit">
                                    <i class="fas fa-edit text-dark"
                                       aria-hidden="true"></i>
                                </a>
                            </li>
                            <li onclick="@(EmployeeHtmlElementVariables.ShowViewHandler.JSFunctionTriggerHandler)(@item.Id)" class="list-toolbar-button">
                                <a data-toggle="tooltip" data-placement="top" title="@Resource.LabelView">
                                    <i class="fas fa-search text-dark"
                                       aria-hidden="true"></i>
                                </a>
                            </li>
                            <li onclick="@(EmployeeHtmlElementVariables.ShowDeleteHandler.JSFunctionTriggerHandler)(@item.Id)" class="list-toolbar-button">
                                <a data-toggle="tooltip" data-placement="top" title="@Resource.LabelDelete">
                                    <i class="fas fa-trash text-dark"
                                       aria-hidden="true"></i>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="small">
    <br />
    @if (Model.EmployeeList != null)
    {
        @Html.CelerSoftTablePagination(Model.EmployeeList)
    }
</div>
<script type="text/javascript">
</script>